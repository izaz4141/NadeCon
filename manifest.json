{
  "manifest_version": 2,
  "name": "NadeCon",
  "version": "3.0.1",
  "author": "Glicole",
  "homepage_url": "https://github.com/izaz4141/NadeCon/",
  "description": "Detects media from pages and connects to Nadeko~don",
  "icons": {
    "48": "icons/nadecon-48.png",
    "96": "icons/nadecon-96.png"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "cookies",
    "privacy",
    "*://localhost/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "popup/media-popup.css"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/nadecon-16.png",
      "32": "icons/nadecon-32.png"
    },
    "default_popup": "popup/action-popup.html",
    "default_title": "NadeCon"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "glicole@nadecon",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}